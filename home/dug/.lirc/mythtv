   button = KEY_DELETE
   config = D  
end

begin
	# Hauppauge
   prog = mythtv
# This is the Red key
# We'll use it for "Delete"
   button = KEY_RED
   config = D  
end

begin
   prog = mythtv
   button = KEY_INFO
   config = I  
end

begin
   prog = mythtv
# This is the Green key
# We'll use it for "Information"
   button = KEY_GREEN
   config = I  
end

# Note the "repeat =" strings in the volume and channel.
# This means that if you hold down the key, every nth instance will be
# passed.  This depends on your system, so you may want to increase or
# decrease this and see what happens.  repeat = 1 is probably too
# fast.

begin
  prog = mythtv
  button = KEY_VOLUMEDOWN
  config = F10  
    repeat = 1
end

begin
	# Hauppauge
  prog = mythtv
# This is the Yellow key
# Use it as a volume key
  button = KEY_YELLOW
  config = F10  
    repeat = 1
    delay = 0
end

begin
  prog = mythtv
# This is the Blue key
# Use it as a volume key
  button = KEY_VOLUMEUP
    repeat = 1
  config = F11  
end

begin
	# Hauppauge
  prog = mythtv
# This is the Blue key
# Use it as a volume key
  button = KEY_BLUE
  config = F11  
    repeat = 1
    delay = 0
end

begin
    prog = mythtv
    button = KEY_UP
# This is the "up" on the central diamond 
    config = Up
    repeat = 1
end

begin
    prog = mythtv
    button = KEY_DOWN
# This is the "down" on the central diamond 
    config = Down
    repeat = 1
end

# Left key
begin
    prog = mythtv
    button = KEY_LEFT
# This is the "left" on the central diamond 
    config = Left
    repeat = 1
end

# Right key
begin
    prog = mythtv
    button = KEY_RIGHT
# This is the "right" on the central diamond 
    config = Right
    repeat = 1
end

begin
    prog = mythtv
# Middle button on the diamond
    button = KEY_OK
    config = Return
end

# Mute sound
begin
    prog = mythtv
    button = KEY_MUTE
    config = F9  
end

begin
   prog = mythtv
# Change focus for PiP (to change channel in the other window)
   button = KEY_TUNER
   config = B  
end

begin
   prog = mythtv
# Toggle PiP on/off
   button = KEY_ZOOM
   config = V  
end

begin
    prog = mythtv
    button = KEY_REWIND
    repeat = 1
    config = < 
end

begin
    prog = mythtv
    button = KEY_PLAY
    config = P  
end

begin
    prog = mythtv
    button = KEY_FASTFORWARD
    repeat = 1
    config = >
end

begin
  prog = mythtv
  button = KEY_RECORD
  config = R  
end

begin
   prog = mythtv
# Teletext
   button = KEY_STOP
   config = Space  
end

# Pause
begin
    prog = mythtv
    button = KEY_PAUSE
    config = P  
end

# Replay (Review)
begin
   prog = mythtv
   button = KEY_PREVIOUS
# Use for backwards commercial skip
    config = Q  
end

# Skip (Cue)
begin
   prog = mythtv
   button = KEY_NEXT
# Use for forward commercial skip
    config = Z  
end
